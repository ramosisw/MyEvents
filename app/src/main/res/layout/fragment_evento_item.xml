<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp">

    <ImageView
        android:id="@+id/img_evento_imagen"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:clickable="false"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:id="@+id/lny_descripcion"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lbl_evento_nombre"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:text="Nombre Evento"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/lbl_evento_fecha"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:gravity="right"
            android:singleLine="true"
            android:text="dd de mm del yyyy"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/lbl_evento_lugar_nombre"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:text="Nombre del Lugar" />

        <TextView
            android:id="@+id/lbl_evento_lugar_ciudad_estado"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:text="Ciudad, Estado" />
    </LinearLayout>
</LinearLayout>